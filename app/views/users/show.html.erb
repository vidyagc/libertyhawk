<div class="container">
<div class="row page-row">

    <div class="col-md-4 col-md-push-8">
    
        <%= render 'searches/form' %>

    </div>

    <div class="col-md-8 col-md-pull-4">
        <h2>Saved Bills</h2>

        <% @user.favorites.each do |favorite| %>
        
            <%= link_to favorite.title, favorite_path(:format => favorite.id), class: "bill-link" %><p></p>
        
            <%= render 'favorites/remove', favorite: favorite %><p></p>
        
        <% end %>

    </div>

</div>
</div>